<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f2a2a"
    tools:context=".perfil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3xWARS"
        android:fontFamily="@font/snippet"
        android:textSize="60dp"
        android:layout_centerHorizontal="true"
        android:textColor="#00a62c"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/flecha"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/snippet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="@font/snippet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/profileActprofileIV"
        android:layout_marginTop="150dp"
        android:layout_width="150dp"
        android:layout_height="178dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/iconoperfil"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/snippet"
        android:layout_marginTop="180dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:text="Change name"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/snippet"
        android:layout_marginTop="240dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:text="Change photo"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="108dp"
        android:layout_height="116dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/dinerosv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/snippet"
        android:text="999.999"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="120dp"
        android:textColor="#00a62c"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/bolsaw"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#00a62c"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="90dp"
        android:fontFamily="@font/snippet"
        android:textStyle="bold"
        android:text="In freinds tierlist"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#00a62c"
        android:layout_marginTop="430dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:paddingTop="90dp"
        android:fontFamily="@font/snippet"
        android:textStyle="bold"
        android:text="In GLOBAL tierlist"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="470dp"
        android:translationZ="90dp"
        android:fontFamily="@font/snippet"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="470dp"
        android:translationZ="90dp"
        android:fontFamily="@font/snippet"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:text="1" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#00a62c"
        android:text="See your skins"
        android:fontFamily="@font/snippet"
        android:textStyle="bold"
        android:textSize="25dp"
        />
</RelativeLayout>