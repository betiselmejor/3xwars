<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2f2a2a"
    android:layout_height="match_parent"
    tools:context=".lobby">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3xWARS"
        android:fontFamily="@font/snippet"
        android:textSize="60dp"
        android:layout_centerHorizontal="true"
        android:textColor="#00a62c"/>

    <Button
        android:id="@+id/addAFriendbtn"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        android:text="Add a friend"
        android:fontFamily="@font/snippet"
        android:textSize="20dp"
        android:backgroundTint="#00a62c" />

    <ImageView
        android:layout_width="131dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/sobre" />


    <Button
        android:id="@+id/BattleAFriendbtn"
        android:layout_width="167dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#00a62c"
        android:fontFamily="@font/snippet"
        android:text="Battle a friend"
        android:textSize="20dp" />

    <Button
        android:id="@+id/OfflineBattlebtn"
        android:layout_width="167dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="358dp"
        android:backgroundTint="#00a62c"
        android:fontFamily="@font/snippet"
        android:text="Offline Battle"
        android:textSize="20dp" />

    <Button
        android:id="@+id/randomBattleebtn"
        android:layout_width="167dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="#00a62c"
        android:fontFamily="@font/snippet"
        android:text="Random battle"
        android:textSize="20dp" />

    <Button
        android:id="@+id/optionsbtn"
        android:layout_width="167dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="358dp"
        android:backgroundTint="#00a62c"
        android:fontFamily="@font/snippet"
        android:text=""
        android:textSize="20dp" />


</RelativeLayout>