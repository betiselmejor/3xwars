<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#2f2a2a"
        app:cardCornerRadius="30dp"
        >

        <ImageView
            android:id="@+id/recyclerskinsSkin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitStart"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/espadasx"/>

        <TextView
            android:id="@+id/recyclerskinsSkinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espadas X"
            android:fontFamily="@font/snippet"
            android:textStyle="bold"
            android:textColor="#00a62c"
            android:textSize="30dp"
            android:layout_gravity="bottom|center_horizontal"/>


    </androidx.cardview.widget.CardView>





</RelativeLayout>