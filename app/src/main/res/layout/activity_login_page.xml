<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2f2a2a"
    android:layout_height="match_parent"
    tools:context=".loginPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3xWARS"
        android:fontFamily="@font/snippet"
        android:textSize="60dp"
        android:layout_centerHorizontal="true"
        android:textColor="#00a62c"/>

    <EditText
        android:id="@+id/usernameET"
        android:layout_width="249dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/snippet"
        android:hint="Username"
        android:paddingLeft="5dp"
        android:textColor="#00a62c"
        android:textColorHint="#8000a62c" />

    <EditText
        android:id="@+id/passwordET"
        android:layout_width="249dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/snippet"
        android:hint="Password"
        android:paddingLeft="5dp"
        android:textColor="#00a62c"
        android:textColorHint="#8000a62c" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:backgroundTint="#00a62c"
        android:fontFamily="@font/snippet"
        android:text="Log in"
        android:textSize="30dp" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="317dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="329dp"
        android:text="Remember me"
        android:fontFamily="@font/snippet"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/goOflinebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:backgroundTint="#00a62c"
        android:fontFamily="@font/snippet"
        android:text="Go offline"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/facebookloginIV"
        android:layout_width="90dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="228dp"
        tools:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/xboxloginIV"
        android:layout_width="90dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="228dp"
        tools:srcCompat="@drawable/xbpx" />

    <ImageView
        android:id="@+id/googleloginIV"
        android:layout_width="90dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="297dp"
        android:layout_marginBottom="228dp"
        tools:srcCompat="@drawable/gogle" />


</RelativeLayout>